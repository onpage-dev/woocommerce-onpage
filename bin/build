#!/bin/sh
set -e
rm -f woocommerce-onpage.zip

rm -rf build/ && php php-scoper.phar add-prefix

#php7.4 $(which composer) install
cd build/
composer dumpautoload
zip -9 \
--exclude '*.git*' \
--exclude './woocommerce-onpage.zip' \
--exclude './bin/*' \
--exclude './composer.*' \
--exclude './db-models/*' \
--exclude './storage/*' \
--exclude './theme-example/*' \
--exclude './log.txt' \
--exclude './wp-eloquent/vendor/*' \
--exclude 'php-scoper.phar' \
-r ../woocommerce-onpage.zip .
cd ..